 },
  "project-settings": [
    {
      "key": "project-field",
      "name": "Select the field with the project list",
      "required": true,
      "type": "field-list"
    },
    {
      "key": "project-field-mapping",
      "name": "Specify the project label and project id",
      "required": true,
      "type": "sub_settings",
      "repeatable": true,
      "sub_settings": [
        {
          "key": "project-field-label",
          "name": "Project label <br> as shown in the respective dropdown field",
          "required": true,
          "type": "text"
        },
        {
          "key": "project-field-id",
          "name": "Project id",
          "required": true,
          "type": "text"
        }
      ]
    },
    {
      "key": "mod-description",
      "name": "Add the project and their respective admin along with their API token",
      "required": true,
      "type": "sub_settings",
      "repeatable": true,
      "sub_settings": [
        {
          "key": "project-name",
          "name": "Project access form",
          "required": true,
          "type": "form-list"
        },
        {
          "key": "project-admin",
          "name": "Project Admin (user name)",
          "required": true,
          "type": "text"
        },
        {
          "key": "project-admin-token",
          "name": "Project Admin's API Token",
          "required": true,
          "type": "text"
        }
      ]
    }
    ]
}
